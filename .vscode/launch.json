{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug NestJS",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "start:dev"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/backend",
      "restart": true,
      "skipFiles": ["<node_internals>/**", "node_modules/**"]
    }
  ]
}
